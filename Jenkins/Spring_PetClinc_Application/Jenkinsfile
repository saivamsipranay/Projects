pipeline {
    agent { label 'jdk_17'}
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('git') {
            steps {
                git url: 'https://github.com/saivamsipranay/spring-petclinic.git', branch: "main"
            }
        }
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('test') {
            steps {
                junit '**/surefire-reports/TEST-*.xml'
                archiveArtifacts artifacts: '**/target/*.jar', followSymlinks: false
            }
        }
    }
}